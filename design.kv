<LoginScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                hint_text:"Username"
            TextInput:
                hint_text:"Password"
            Button:
                text: "Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password?"
            Button:
                text:"Sign up"
                on_press:root.sign_up()

<SignupScreen>
    GridLayout:
        cols:1
        Label:
            text:"Blah blah blah"
        TextInput:
            hint_text:"Username"
        TextInput:
            hint_text:"Password"
        Button:
            text:"Submit"
            

<RootWidget>
    LoginScreen:
        name:"login_screen"
    SignupScreen:
        name:"signup_screen"
