# #:kivy !ex
<LoginScreen>
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text:"User Login"
            TextInput:
                hint_text:"Username"
            TextInput:
                hint_text:"Password"
            Button:
                text: "Login"
        GridLayout:
            cols:2
            Button:
                text:"Forgot Password?"
            Button:
                text:"Sign up"
                on_press:root.sign_up()

<SignupScreen>
    GridLayout:
        cols:1
        Label:
            text:"Blah blah blah"
        TextInput:
            id:username
            hint_text:"Username"
        TextInput:
            id:password
            hint_text:"Password"
        Button:
            text:"Submit"
            on_press:root.add_user(root.ids.username.text, root.ids.password.text)

<SignupScreenSuccess>  
    GridLayout:
        cols : 1
        Label:
            text:"Signup successful"
        Button:
            text:"Login Page"         

<RootWidget>
    LoginScreen:
        name:"login_screen"
    SignupScreen:
        name:"signup_screen"
    SignupScreenSuccess:
        name:"signup_screen_success"
